<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Added Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="IntelliCity"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.UrbanManagementPlatform"
        tools:targetApi="31">

        <!-- This is the first screen the user sees for login/registration. -->
        <activity
            android:name=".activities.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ADDED: The main activity of the app, visible after the user logs in. -->
        <!-- Using a NoActionBar theme because this activity has its own toolbar. -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.UrbanManagementPlatform" />

    </application>

</manifest>
